@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IA_Ecom.ViewModels.ContactUsViewModel

@{
ViewData["Title"] = "Contact Us";
Layout = "~/Views/Home/_PageLayout.cshtml";
}

<!-- CONTACT US -->
<section class="section">
    <h2 class="section-title">@ViewData["Title"]</h2>
    <p class="title-info">Please feel free to provide us Feedback or approach us for Support</p>
    <div class="grid-two w-1000">
        <div class="location-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158977.54255671786!2d-0.2416819999999959!3d51.5285582!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487604b7b210f3dd%3A0x6a5df291c63f6b8d!2sLondon%2C%20UK!5e0!3m2!1sen!2sus!4v1623828372986!5m2!1sen!2sus"
                    width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy">
            </iframe>
        </div>
        <div class="contact-form card">
            <h3 class="title-info">Send a Message</h3>
            <form asp-controller="Feedback" asp-action="ContactUs" method="post" class="user-form">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="user-form__input" placeholder="Enter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="user-form__input" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message"></label>
                    <textarea asp-for="Message" rows="4" class="user-form__input" placeholder="Enter Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="button">Send Message</button>
            </form>
        </div>
    </div>
    <div class="contact-details">
        <h3 class="section-title">Contact Details</h3>
        <p class="title-info">Email: simon@simonshoes.com</p>
        <p class="title-info">Phone: +123-456-7890</p>
        <p class="title-info">Address: 123 Street Name, City, Country</p>
    </div>
</section>

