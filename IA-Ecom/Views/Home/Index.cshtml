    <a asp-controller="Product" asp-action="Index" class="section-link">View All</a>

    <div class="featured__container grid">
        
        <div class="featured__product">
            <div class="featured__box">
                <div class="featured__new">NEW</div>
                <img src="./images/product0.png" class="featured__img" alt="">
            </div>

            <div class="featured__data">
                <h3 class="featured__name">White Sneakers</h3>
                <span class="featured__price">$25</span>
            </div>
        </div>

        <div class="featured__product">
            <div class="featured__box">
                <div class="featured__new">NEW</div>
                <img src="./images/product2.png" class="featured__img" alt="">
            </div>

            <div class="featured__data">
                <h3 class="featured__name">Orange Suede Bag</h3>
                <span class="featured__price">$99</span>
            </div>
        </div>

        <div class="featured__product">
            <div class="featured__box">
                <div class="featured__new">NEW</div>
                <img src="./images/product1.png" class="featured__img" alt="">
            </div>

            <div class="featured__data">
                <h3 class="featured__name">Nikkon Camera</h3>
                <span class="featured__price">$100</span>
            </div>
        </div>

        <div class="featured__product">
            <div class="featured__box">
                <div class="featured__new">NEW</div>
                <img src="./images/product3.png" class="featured__img" alt="">
            </div>

            <div class="featured__data">
                <h3 class="featured__name">Yellow Premium Shoes</h3>
                <span class="featured__price">$60</span>
            </div>
        </div>
    </div>
</section>

<!-- NEW ARRIVALS -->
<section class="featured section" id="new-products">
    <h2 class="section-title">NEW ARRIVALS</h2>
    <a asp-controller="Product" asp-action="Index" class="section-link">View All</a>

    <div class="new__container grid">

        @foreach (var product in Model)
        {
            <div class="new__box">
                <img src="@product.ThumbnailImageUrl" alt="" class="new__img">

                <div class="new__link">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="button">VIEW PRODUCT</a>
                </div>
            </div>
        }
    </div>
</section>


<!-- CUSTOMER REVIEWS -->
<section class="reviews section">
