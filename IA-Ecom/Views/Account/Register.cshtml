@model IA_Ecom.ViewModels.RegisterViewModel
@{
ViewData["Title"] = "Register";
Layout = "../Home/_PageLayout.cshtml";
}
<div class="section-title">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card">
        <div class="w-400">
            <form method="post" id="userForm" class="user-form ">
                <div class="form-group horizontal-group">
                <div>
                    <label asp-for="FirstName">Firstname</label>
                    <input asp-for="FirstName" class="user-form__input form-control" placeholder="Enter your first name" required>
                    <span asp-validation-for="@Model.FirstName" class="text-error"></span>
                </div>
                <div>
                    <label asp-for="LastName">Lastname</label>
                    <input asp-for="LastName" class="user-form__input form-control" placeholder="Enter your last name" required>
                    <span asp-validation-for="@Model.LastName" class="text-error"></span>
                </div>
                </div>
                @* <div class="form-group"> *@
                @*     <label for="username">Username</label> *@
                @*     <input type="text" id="username" class="user-form__input form-control" placeholder="Enter your username" name="username" required> *@
                @* </div> *@

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" id="email" class="user-form__input form-control" placeholder="Enter your email" required>
                    <span asp-validation-for="@Model.Email" class="text-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Role">Role</label>
                    <select asp-for="Role" id="role">
                        <option value="ADMIN">Admin</option>
                        <option value="USER">User</option>
                    </select>
                    <span asp-validation-for="@Model.Role" class="text-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" id="password" class="user-form__input form-control" placeholder="Enter password" name="password" required>
                    <span asp-validation-for="@Model.Password" class="text-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password2">Re-enter Password</label>
                    <input asp-for="Password2" id="password2" class="user-form__input form-control" placeholder="Re-enter password" name="password2" required>
                    <span asp-validation-for="@Model.Password2" class="text-error"></span>
                </div>

                <button type="submit" class="button">Register</button>

                <div class="">
                    <label >Already a User?</label>
                </div>
                <a class="button" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            </form>
        </div>
    </div>
