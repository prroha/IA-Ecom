@model IA_Ecom.ViewModels.ManageOrderViewModel;
@{
    ViewData["Title"] = "Order Management";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<div class="page-title">
    <h2>Order Management</h2>
</div>
<div class="responsive-grid">
    <!-- Order List -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Orders</h3>
            <div class="summary-section">
                <div class="summary-item">
                    <p>Total Orders: <strong id="total-orders">0</strong></p>
                </div>
                <div class="summary-item">
                    <p>Total Amount: <strong id="total-amount">$0.00</strong></p>
                </div>
                <div class="summary-item">
                    <p>Unpaid Orders: <strong id="unpaid-orders">0</strong></p>
                </div>
            </div>
        </div>
        <table class="order-table" id="order-table">
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Payment Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerName</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-controller="Admin" asp-action="OrderDetails" asp-route-id="@order.OrderId" class="button edit-button">Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteOrder" asp-route-id="@order.OrderId" class="button-secondary delete-button">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <!-- Edit Order -->
    <div class="card">
        <h3 class="card-title">Edit Order</h3>
        <form asp-controller="Admin" asp-action="EditOrder" method="post" class="user-form">
            <!-- Order Information -->
            <div class="form-group">
                <label asp-for="@Model.Order.OrderId">Order ID</label>
                <input type="text" asp-for="@Model.Order.OrderId" class="user-form__input" readonly>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Order.CustomerName">Customer Name</label>
                <input type="text" asp-for="@Model.Order.CustomerName" class="user-form__input">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Order.CustomerEmail">Customer Email</label>
                <input type="email" asp-for="@Model.Order.CustomerEmail" class="user-form__input">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Order.OrderDate">Order Date</label>
                <input type="date" asp-for="@Model.Order.OrderDate" class="user-form__input">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Order.Status">Order Status</label>
                <select asp-for="@Model.Order.Status" class="user-form__input">
                    <option value="pending">Pending</option>
                    <option value="shipped">Shipped</option>
                    <option value="delivered">Delivered</option>
                    <option value="cancelled">Cancelled</option>
                </select>
            </div>

            <!-- Product Details -->
            <div class="form-group">
                <label for="product-id">Product ID</label>
                <input type="text" id="product-id" class="user-form__input">
            </div>
            <div class="form-group">
                <label for="product-name">Product Name</label>
                <input type="text" id="product-name" class="user-form__input">
            </div>
            <div class="form-group">
                <label for="product-quantity">Quantity</label>
                <input type="number" id="product-quantity" class="user-form__input">
            </div>
            <div class="form-group">
                <label for="unit-price">Unit Price</label>
                <input type="text" id="unit-price" class="user-form__input">
            </div>

            <!-- Payment Information -->
            <div class="form-group">
                <label for="payment-method">Payment Method</label>
                <input type="text" id="payment-method" class="user-form__input">
            </div>
            <div class="form-group">
                <label for="payment-status">Payment Status</label>
                <select id="payment-status" class="user-form__input">
                    <option value="paid">Paid</option>
                    <option value="pending">Pending</option>
                    <option value="refunded">Refunded</option>
                </select>
            </div>

            <!-- Shipping Information -->
            <div class="form-group">
                <label for="shipping-method">Shipping Method</label>
                <input type="text" id="shipping-method" class="user-form__input">
            </div>
            <div class="form-group">
                <label for="tracking-number">Tracking Number</label>
                <input type="text" id="tracking-number" class="user-form__input">
            </div>

            <!-- Addresses -->
            <div class="form-group">
                <label for="shipping-address">Shipping Address</label>
                <textarea id="shipping-address" class="user-form__input"></textarea>
            </div>
            <div class="form-group">
                <label for="billing-address">Billing Address</label>
                <textarea id="billing-address" class="user-form__input"></textarea>
            </div>
            <div class="form-group">
                <label for="special-instructions">Special Instructions</label>
                <textarea id="special-instructions" class="user-form__input"></textarea>
            </div>
            <input type="hidden" asp-for="@Model.Order.CustomerId" readonly>
            <button type="submit" class="button">Save Changes</button>
        </form>
    </div>
</div>