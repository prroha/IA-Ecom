@model IA_Ecom.ViewModels.ProductViewModel

<div class="card">
    <h3 class="card-title">Edit Product</h3>
    <form id="edit-product-form" asp-controller="Admin" asp-action="AddProduct" method="post" class="user-form" enctype="multipart/form-data">
        <div class="form-group horizontal-group">
            <div >
                <label asp-for="Name">Product Name</label>
                <input type="text" asp-for="Name" class="user-form__input">
            </div>
            <div >
                <label asp-for="Category">Product Category</label>
                <input type="text" asp-for="Category" class="user-form__input">
            </div>
        </div>
        <div class="form-group horizontal-group">
            <div>
                <label asp-for="Price">Product Price</label>
                <input asp-for="Price" class="user-form__input">
            </div>
            <div>
                <label asp-for="Stock">Product Quantity</label>
                <input type="number" asp-for="Stock" class="user-form__input">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description">Product Description</label>
            <textarea asp-for="Description" class="user-form__input"></textarea>
        </div>
        @if(Model?.ThumbnailImageUrl != null)
        {
        <div class="form-group">
            <label asp-for="ThumbnailImageUrl">Product Image URL</label>
            <input type="text" asp-for="ThumbnailImageUrl" class="user-form__input">
        </div>
        }
        <div class="form-group horizontal-group">
            <div>
                <label asp-for="Color">Color</label>
                <input type="text" asp-for="Color" class="user-form__input">
            </div>
            <div>
                <label asp-for="Size">Size</label>
                <input type="text" asp-for="Size" class="user-form__input">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ImagesInput">Product Images</label>
            <input asp-for="ImagesInput" class="form-control" type="file" multiple />
            <span asp-validation-for="ImagesInput" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ProductId" value="@(Model?.ProductId != 0 ? Model?.ProductId : 0)" readonly>
        <button type="submit" class="button">Save Changes</button>
    </form>
</div>
