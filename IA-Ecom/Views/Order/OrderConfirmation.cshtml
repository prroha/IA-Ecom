@model IA_Ecom.ViewModels.OrderConfirmationViewModel
@{
ViewData["Title"] = "Order Confirmation";
Layout = "~/Views/Home/_PageLayout.cshtml";
}


<div class="order-confirmation">
    <h2>Thank You for Your Order!</h2>
    <p>Your order has been successfully placed. Below are the details of your order:</p>

    <div class="order-summary card">
        <h3 class="card-title">Order Summary</h3>
        <table class="product-table">
            <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.OrderItems)
            {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.UnitPrice * item.Quantity).ToString("C")</td>
            </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <th colspan="3">Subtotal</th>
                <td>@Model.Subtotal.ToString("C")</td>
            </tr>
            <tr>
                <th colspan="3">Shipping</th>
                <td>@Model.ShippingCost.ToString("C")</td>
            </tr>
            <tr>
                <th colspan="3">Total</th>
                <td>@Model.TotalAmount.ToString("C")</td>
            </tr>
            </tfoot>
        </table>
    </div>

    <div class="order-details card">
        <h3 class="card-title">Order Details</h3>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM d, yyyy")</p>
        <p><strong>Shipping Address:</strong></p>
        <address>
            @Model.ShippingAddress
        </address>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
    </div>

    <div class="order-actions">
        <a href="@Url.Action("Index", "Home")" class="button">Return to Home</a>
        @* <a href="@Url.Action("OrderHistory", "Account")" class="button-secondary">View Order History</a> *@
    </div>
</div>